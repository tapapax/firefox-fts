{
	"applications" : {
		"gecko" : {
			"id" : "tabswitcher@volinsky.net"
		}
	},

	"background" : {
		"scripts" : ["background.js"]
	},

	"browser_action" : {
		"default_icon" : "icons/icon64.png",
		"default_title" : "Open \"Fast Tab Switcher\" window"
	},

	"options_ui": {
		"page": "options/options.html"
	},

	"commands" : {
		"open-fts" : {
			"suggested_key" : {
				"default" : "Ctrl+Space",
				"mac" : "MacCtrl+Space"
			},
			"description" : "Open \"Fast Tab Switcher\" window"
		}
	},

	"icons" : {
		"32" : "icons/icon.png",
		"64" : "icons/icon64.png"
	},

	"manifest_version" : 2,

	"name" : "Fast Tab Switcher",

	"permissions" : ["tabs", "<all_urls>"],

	"version" : "2.4.0"
}
